{% extends 'admin/blog/base.html.twig' %}

{% block title %}Administration des utilisateurs  {% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des utilisateurs </h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>ID</th>
                <th>Utilisateur</th>
                <th>Société</th>
                <th>Adresse email</th>
                <th>Rôle</th>
                <th>Inscrit le </th>
            </tr>
            </thead>

            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id}}</td>
                    <td>{{ user.username}}</td>
                    <td>{{ user.society }}</td>
                    <td>{{ user.email}}</td>
                    <td>{{ user.createdAt | date ('Y-M-j') }}</td>
                    <td>
                        <a href="#" class="badge badge-primary">Edit</a>
                        <a href="{{ path('admin_user_delete',{'id':user.id}) }}" class="badge badge-danger">Suppr</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
