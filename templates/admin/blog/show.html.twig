{% extends 'base.html.twig' %}
{% block body %}
    <article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">
            Ecrit le {{ article.createdAt | date ('d/m/Y')}} à {{ article.createdAt | date ('H:i') }}
        </div>
        <div class="content">
            <img src="{{article.image}}" alt="">
            {{ article.content | raw }}
            <hr>
            <p>paragraphe de l'article concerné</p>
        </div>
    </article>
{% endblock %}