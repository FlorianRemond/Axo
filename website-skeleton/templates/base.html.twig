<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Axoblog!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('bootstrap.min.css') }}" >
        <meta name="viewport" content="width=device-width", user-sclable="no">
        {% block stylesheets %}{% endblock %}
    </head>

    <body>

            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <a class="navbar-brand" href="{{path('home')}}">Axoblog</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">

                        {% if not app.user %}
                            <li class="nav-item">
                                <a href="{{ path ('security_login') }}" class="nav-link">
                                    Connexion
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path ('security_registration') }}" class="nav-link">
                                    S'enregistrer
                                </a>
                            </li>
                        {% else %}
                        <li class="nav-item">
                            <a href="{{ path ('security_logout') }}" class="nav-link">
                                Déconnexion
                            </a>
                        </li>
                            <li class="nav-item ">
                                <a class="nav-link" href="{{path('blog')}}">Article</a>
                            </li>
                        {% endif %}

                        {#
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('blog_create')}}">Créer un article  </a>
                        </li>
                        #}
                    </ul>
                </div>
            </nav>
            <div class="container">
                {% block body %} {% endblock %}
            </div>

        {% block javascripts %}{% endblock %}
    </body>
</html>
